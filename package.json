{
    "name": "citrus-linting",
    "description": "Linter configs used by CitRUS.",
    "license": "MIT",
    "author": "CitRUS",
    "scripts": {
        "prepare": "husky install",
        "git:commit": "git-cz",
        "prettier": "prettier --check",
        "prettier:fix": "pnpm prettier -- --write",
        "prettier:all": "pnpm prettier -- \"./**/*.{md,json,js}\"",
        "prettier:fix:all": "pnpm prettier:all -- --write",
        "lint": "pnpm prettier:all",
        "lint:fix": "pnpm prettier:fix:all",
        "ci": "pnpm lint"
    },
    "lint-staged": {
        "*.{md,json,js}": "pnpm prettier:fix"
    },
    "config": {
        "commitizen": {
            "path": "cz-customizable"
        },
        "cz-customizable": {
            "config": "./commits/commitizen.js"
        }
    },
    "devDependencies": {
        "@commitlint/cli": "12.1.3",
        "commitizen": "4.2.4",
        "cz-customizable": "6.3.0",
        "husky": "6.0.0",
        "inquirer": "8.0.0",
        "lint-staged": "11.0.0",
        "prettier": "2.3.0",
        "prettier-plugin-packagejson": "2.2.11"
    }
}
